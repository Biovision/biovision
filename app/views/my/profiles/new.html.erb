<% content_for :meta_title, t('.title') %>
<% content_for :breadcrumbs do %>
  <span><%= t('.nav_text') %></span>
<% end %>

<article>
  <div class="content-wrapper">
    <h1><%= t('.heading') %></h1>

    <%= render partial: 'my/profiles/new/form', locals: { entity: @entity } %>

    <nav>
      <p><%= t('.already_joined') %></p>
      <%= link_to(t('authentication.new.nav_text'), login_path, class: 'button button-ghost') %>
    </nav>
  </div>
</article>
