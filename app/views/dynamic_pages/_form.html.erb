<% model_name = entity.class.to_s.underscore %>
<%=
  form_with(
      model: entity,
      html: {
          id: "#{model_name}-form",
          data: { check_url: check_dynamic_pages_path }
      }
  ) do |f|
%>
  <%= render partial: 'shared/list_of_errors', locals: { entity: entity } %>

  <dl class="fields">
    <div>
      <dt><%= f.label :slug %></dt>
      <dd>
        <%=
          f.text_field(
              :slug,
              class: 'input-text',
              data: { check: :slug },
              maxlength: DynamicPage::SLUG_LIMIT,
              required: true,
              size: nil
          )
        %>
        <div class="check-result-error" data-field="slug"></div>
        <div class="guideline"><%= t('.guidelines.slug') %></div>
      </dd>
    </div>

    <%= render partial: 'shared/forms/language', locals: { f: f } %>

    <div>
      <dt><%= f.label :name %></dt>
      <dd>
        <%=
          f.text_field(
              :name,
              class: 'input-text',
              data: { check: :name },
              maxlength: DynamicPage::NAME_LIMIT,
              size: nil
          )
        %>
        <div class="check-result-error" data-field="name"></div>
        <div class="guideline"><%= t('.guidelines.name') %></div>
      </dd>
    </div>

    <div>
      <dt><%= f.label :url %></dt>
      <dd>
        <%=
          f.text_field(
              :url,
              class: 'input-text',
              data: { check: :url },
              maxlength: DynamicPage::URL_LIMIT,
              size: nil
          )
        %>
        <div class="check-result-error" data-field="url"></div>
        <div class="guideline"><%= t('.guidelines.url') %></div>
      </dd>
    </div>

    <%= render partial: 'shared/forms/simple_image', locals: { f: f } %>

    <div>
      <dt><%= f.label :body %></dt>
      <dd>
        <%=
          f.text_area(
              :body,
              class: 'input-text',
              rows: 10
          )
        %>
      </dd>
    </div>

    <%= render partial: 'shared/forms/entity_flags', locals: { f: f } %>
  </dl>

  <%= render 'shared/forms/state_container' %>

  <div class="buttons">
    <%= hidden_field_tag :entity_id, entity.id %>
    <%= f.button t(:save), class: 'button-save' %>
  </div>
<% end %>
