<div class="data">
  <div><%= admin_entity_link(entity, handler: local_assigns[:handler]) %></div>

  <%= render(partial: 'shared/admin/toggle', locals: { entity: entity }) %>

  <% if local_assigns[:handler]&.permit?('edit', entity) %>
    <div class="entity-actions">
      <%= edit_icon(entity) %>
      <%= destroy_icon(entity) %>
    </div>
  <% end %>
</div>
