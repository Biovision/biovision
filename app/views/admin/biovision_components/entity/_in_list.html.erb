<div class="data">
  <div><%= admin_entity_link(entity) %></div>
  <div class="info"><%= entity.slug %></div>

  <% if local_assigns[:handler]&.permit?('edit', entity) %>
    <%= entity_toggle(entity) %>

    <div class="entity-actions">
      <%= entity_priority_icons(entity) %>
    </div>
  <% end %>
</div>
